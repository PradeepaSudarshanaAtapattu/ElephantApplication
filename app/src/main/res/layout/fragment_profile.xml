<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/teal_700"
        android:layout_marginEnd="2dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logout"
            app:tint="#FEFFFF" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="User Profile info"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/account"
            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="17dp"
            android:gravity="start"
            android:text="jhone Doe"
            android:textColor="#397BDF"
            android:textSize="18dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/phone"
            app:tint="#2196F3" />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="265dp"
            android:src="@drawable/edit"
            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Mobile"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/profile_tele"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="17dp"
            android:gravity="start"
            android:text="+94711523325"
            android:textColor="#397BDF"
            android:textSize="18dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/email"
            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="Email"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="17dp"
            android:gravity="start"
            android:text="jhonedo@gmail.com"
            android:textColor="#397BDF"
            android:textSize="18dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/location_on"
            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Current \nLocation"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="17dp"
            android:gravity="start"
            android:text="Wilachchciya"
            android:textColor="#397BDF"
            android:textSize="18dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</LinearLayout>